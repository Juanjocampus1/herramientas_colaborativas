---
// Footer component
const { currentPath } = Astro.props;
---

<footer class="footer">
	<div class="footer-container">
		<div class="footer-grid">
			<!-- Columna 1: Logo y descripción -->
			<div class="footer-column footer-brand">
				<div class="footer-logo">
					<div class="logo-mark">
						<span>HC</span>
					</div>
					<span class="logo-text">Herramientas Colaborativas</span>
				</div>
				<p class="footer-description">
					Tu guía completa para aprender sobre LMS, CMS y herramientas de desarrollo web modernas.
				</p>
				<div class="social-links">
					<a href="https://github.com/Juanjocampus1/herramientas_colaborativas/tree/dev"  aria-label="GitHub" class="social-link" target="_blank" rel="noopener">
