<style>
	.training-categories {
		padding: 6rem 2rem;
		max-width: 1400px;
		margin: 0 auto;
		background: var(--bg-primary);
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-label {
		display: inline-block;
		font-size: 0.85rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		color: var(--primary-color);
		margin-bottom: 1rem;
	}

	.section-header h2 {
		font-size: 2.75rem;
		font-weight: 800;
		color: var(--text-primary);
		margin: 0 0 1rem 0;
	}

	.highlight {
		color: var(--primary-color);
	}

	.section-subtitle {
		font-size: 1.2rem;
		color: var(--text-secondary);
		max-width: 700px;
		margin: 0 auto;
	}

	.categories-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	.category-card {
		background: var(--surface-color);
		border-radius: 24px;
		padding: 2.5rem;
		border: 2px solid var(--border-color);
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.category-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.category-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
		border-color: var(--primary-color);
	}

	.category-card:hover::before {
		opacity: 1;
	}

	.card-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
	}

	.category-icon {
		font-size: 2.5rem;
		width: 70px;
		height: 70px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
		border-radius: 16px;
	}

	.card-header h3 {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--text-primary);
		margin: 0;
	}

	.category-description {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--text-secondary);
		margin: 0 0 2rem 0;
	}

	.category-examples {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		margin-bottom: 2rem;
	}

	.example-item {
		display: flex;
		gap: 1rem;
		padding: 1rem;
		background: rgba(99, 102, 241, 0.05);
		border-radius: 12px;
		transition: all 0.2s ease;
	}

	.example-item:hover {
		background: rgba(99, 102, 241, 0.1);
		transform: translateX(5px);
	}

	.example-emoji {
		font-size: 1.8rem;
		flex-shrink: 0;
	}

	.example-text {
		flex: 1;
	}

	.example-text strong {
		display: block;
		font-size: 0.95rem;
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: 0.25rem;
	}

	.example-text p {
		margin: 0;
		font-size: 0.85rem;
		color: var(--text-secondary);
		line-height: 1.4;
	}

	.category-stats {
		padding-top: 1.5rem;
		border-top: 1px solid var(--border-color);
		font-size: 0.95rem;
		color: var(--text-secondary);
		text-align: center;
	}

	.stat-highlight {
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--primary-color);
		display: inline-block;
		margin-right: 0.5rem;
	}

	@media (max-width: 1024px) {
		.categories-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 768px) {
		.training-categories {
			padding: 4rem 1.5rem;
		}

		.section-header h2 {
			font-size: 2rem;
		}

		.category-card {
			padding: 2rem;
		}
	}
</style>
