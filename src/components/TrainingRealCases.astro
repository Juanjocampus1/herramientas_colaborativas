<style>
	.training-real-cases {
		padding: 6rem 2rem;
		background: linear-gradient(180deg, var(--bg-primary) 0%, rgba(99, 102, 241, 0.05) 100%);
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
		max-width: 1400px;
		margin-left: auto;
		margin-right: auto;
	}

	.section-label {
		display: inline-block;
		font-size: 0.85rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		color: var(--primary-color);
		margin-bottom: 1rem;
	}

	.section-header h2 {
		font-size: 2.75rem;
		font-weight: 800;
		color: var(--text-primary);
		margin: 0 0 1rem 0;
	}

	.highlight {
		color: var(--primary-color);
	}

	.section-subtitle {
		font-size: 1.2rem;
		color: var(--text-secondary);
	}

	.cases-container {
		max-width: 1400px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
	}

	.case-card {
		background: var(--surface-color);
		border-radius: 24px;
		overflow: hidden;
		border: 2px solid var(--border-color);
		transition: all 0.3s ease;
	}

	.case-card:hover {
		transform: translateY(-8px);
		box-shadow: var(--shadow-lg);
		border-color: var(--primary-color);
	}

	.case-card.featured {
		grid-column: 1 / -1;
	}

	.case-tag {
		background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
		color: white;
		padding: 0.75rem 1.5rem;
		font-size: 0.85rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.case-content {
		padding: 2rem;
	}

	.case-content h3 {
		font-size: 1.75rem;
		font-weight: 800;
		color: var(--text-primary);
		margin: 0 0 0.5rem 0;
	}

	.case-institution {
		font-size: 0.9rem;
		color: var(--primary-color);
		font-weight: 600;
		margin: 0 0 1rem 0;
	}

	.case-description {
		font-size: 1rem;
		line-height: 1.7;
		color: var(--text-secondary);
		margin: 0 0 2rem 0;
	}

	.case-results {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2rem;
		padding: 1.5rem;
		background: rgba(99, 102, 241, 0.05);
		border-radius: 16px;
	}

	.result-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.result-icon {
		font-size: 1.5rem;
	}

	.result-item strong {
		display: block;
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--primary-color);
	}

	.result-item p {
		margin: 0;
		font-size: 0.8rem;
		color: var(--text-secondary);
		line-height: 1.3;
	}

	.case-tools {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.tool-badge {
		padding: 0.5rem 1rem;
		background: white;
		border: 2px solid var(--border-color);
		border-radius: 50px;
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--text-primary);
		transition: all 0.2s ease;
	}

	.tool-badge:hover {
		border-color: var(--primary-color);
		color: var(--primary-color);
	}

	@media (max-width: 1024px) {
		.cases-container {
			grid-template-columns: 1fr;
		}

		.case-card.featured {
			grid-column: 1;
		}
	}

	@media (max-width: 768px) {
		.training-real-cases {
			padding: 4rem 1.5rem;
		}

		.section-header h2 {
			font-size: 2rem;
		}

		.case-results {
			grid-template-columns: 1fr;
		}
	}
</style>
