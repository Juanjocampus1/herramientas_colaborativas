<style>
	.wp-cms-page {
		background: var(--bg-primary);
		min-height: 100vh;
	}

	.hero {
		position: relative;
		padding: 7rem 2rem 5rem;
		text-align: center;
		overflow: hidden;
	}

	.hero-bg {
		position: absolute;
		inset: 0;
		pointer-events: none;
	}

	.orb {
